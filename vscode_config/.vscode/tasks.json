{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Compile",
			"command": "g++",
			"args": [
				"${file}",
				"-o",
				"${workspaceFolder}/bin/${fileBasenameNoExtension}",
				"-g",
				"-Wall",
				"-Wextra",
				"-lGL",
				"-lglut",
			],
			"type": "process",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		}
	]
}
